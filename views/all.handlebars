<div class="container">
    <div class="jumbotron">
        <h1>My Library</h1>
        <h3>Search for notes taken on your favorite books!</h3>
        <hr>
        <a href="/">
            <button class="btn btn-danger btn-lg">
                <span class="fa fa-eye"></span> Search Entries</button>
        </a>
        <a href="/add">
            <button class="btn btn-danger btn-lg">
                <span class="fa fa-plus"></span> Add New Work</button>
        </a>
    </div>
    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <strong>Library Database</strong>
                    </h3>
                </div>
                <div class="panel-body" id="well-section">
                    {{#each works }}
                    <div class="well" id="entry-well-{{@index}}">
                        <h2>{{title}}</h2>
                        <h4> Author: </h4> {{author}}
                        <h4> Genre: </h4> {{genre}}
                        <h4> Notes: </h4> {{notes}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

